.header
  .header__inner
    .clearfix
      .l-left
        = link_to root_path do
          = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1857733084")
      = form_tag "https://www.mercari.com/jp/search/", {class: "header-form l-right"} do
        %input{name: "keyword", placeholder: "キーワードから探す", type: "search", value: "", class: "input-default"}
        %i.fas.fa-search

    .header-nav-box
      .l-left
        .header-nav
          .list
            = render "/shared/category_search"
          .list
            ブランドから探す
      .l-right
        .header-user-nav
          - if user_signed_in?
            .list-mypage
              = image_tag("//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png")
              = link_to mypages_path do
                %div マイページ
            .list-notice
              .fas.fa-bell
                &nbsp;お知らせ
            .list-to-do
              .fas.fa-check
                やることリスト
          - else
            = link_to new_user_session_path, class: "no-line" do
              .header-btn.header-btn__login
                ログイン
            = link_to new_user_registration_path, class: "no-line" do
              .header-btn.header-btn__signup
                新規会員登録
